<Application x:Class="ResponsiveNaviBarSample.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:ResponsiveNaviBarSample"
             xmlns:localData="using:ResponsiveNaviBarSample.Data">

    <Application.Resources>
        <!--  アプリケーション固有のリソース  -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/DesignTheme.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <x:String x:Key="AppName">Responsive NaviBar Sample</x:String>

        </ResourceDictionary>
    </Application.Resources>
</Application>
